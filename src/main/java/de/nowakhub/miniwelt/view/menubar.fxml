<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.PopupControl?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar fx:id="menubar" styleClass="menubar" stylesheets="@menubar.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.nowakhub.miniwelt.controller.MenubarController">
    <fx:define>
        <ToggleGroup fx:id="mouseModeToggleGroupMenubar" />
    </fx:define>

    <Menu text="_Editor">
        <MenuItem mnemonicParsing="false" onAction="#onEditorNew" text="New">
         <accelerator>
            <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onEditorOpen" text="Open">
         <accelerator>
            <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onEditorSave" text="Save">
         <accelerator>
            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem mnemonicParsing="false" onAction="#onEditorCompile" text="Compile">
         <accelerator>
            <KeyCodeCombination alt="UP" code="K" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onEditorPrint" text="Print">
         <accelerator>
            <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem mnemonicParsing="false" onAction="#onEditorExit" text="Exit">
         <accelerator>
            <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
    </Menu>

    <Menu text="_Office-Complex">
        <MenuItem onAction="#onWorldReset" text="_Reset">
        </MenuItem>
        <MenuItem onAction="#onWorldLoad" text="_Load">
        </MenuItem>
        <MenuItem onAction="#onWorldSave" text="S_ave">
        </MenuItem>
        <Menu text="E_xport world as...">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#onWorldExportPNG" text="PNG" />
                <MenuItem mnemonicParsing="false" onAction="#onWorldExportXML" text="XML" />
                <MenuItem mnemonicParsing="false" onAction="#onWorldExportText" text="Text" />
            </items>
        </Menu>
        <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem onAction="#onWorldChangeSize" text="_Change world size">
        </MenuItem>
        <Menu text="Set _mouse mode to...">
            <RadioMenuItem onAction="#onMouseModePlaceObstacle" text="Place Wall" />
            <RadioMenuItem onAction="#onMouseModePlaceItem" text="Place Danger">
            <toggleGroup>
               <ToggleGroup fx:id="mouseModeToggleGroupMenubar" />
            </toggleGroup></RadioMenuItem>
            <RadioMenuItem onAction="#onMouseModePlaceActor" text="Place _Karl" toggleGroup="$mouseModeToggleGroupMenubar" />
            <RadioMenuItem onAction="#onMouseModePlaceStart" text="Place Startpoint" toggleGroup="$mouseModeToggleGroupMenubar" />
            <RadioMenuItem onAction="#onMouseModePlaceFree" text="Remove" toggleGroup="$mouseModeToggleGroupMenubar" />
        </Menu>
    </Menu>

    <Menu text="_Karl">
        <MenuItem mnemonicParsing="false" onAction="#onActorBagChangeSize" text="Change bag max. size"><accelerator>
            <KeyCodeCombination alt="UP" code="F1" control="UP" meta="UP" shift="UP" shortcut="UP" />
         </accelerator>
        </MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorBagChangeContent" text="Change bag content"><accelerator>
            <KeyCodeCombination alt="UP" code="F2" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem mnemonicParsing="false" onAction="#onActorStepAhead" text="[move] stepAhead()"><accelerator>
            <KeyCodeCombination alt="UP" code="F3" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorTurnRight" text="[move] turnRight()"><accelerator>
            <KeyCodeCombination alt="UP" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorBackToStart" text="[move] backToStart()"><accelerator>
            <KeyCodeCombination alt="UP" code="F5" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorAheadClear" text="[test] aheadClear()"><accelerator>
            <KeyCodeCombination alt="UP" code="F6" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorBagEmpty" text="[test] bagEmpty()"><accelerator>
            <KeyCodeCombination alt="UP" code="F7" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorFoundItem" text="[test] foundDanger()"><accelerator>
            <KeyCodeCombination alt="UP" code="F8" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorPickUp" text="[act ] pickUp()"><accelerator>
            <KeyCodeCombination alt="UP" code="F9" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onActorDropDown" text="[act ] dropDown()"><accelerator>
            <KeyCodeCombination alt="UP" code="F10" control="UP" meta="UP" shift="UP" shortcut="UP" />
        </accelerator></MenuItem>
    </Menu>

    <Menu text="_Simulation">
        <MenuItem mnemonicParsing="false" onAction="#onSimStartOrContinue" text="Start / Continue">
         <accelerator>
            <KeyCodeCombination alt="UP" code="RIGHT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onSimPause" text="Pause">
         <accelerator>
            <KeyCodeCombination alt="UP" code="DOWN" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#onSimStop" text="Stop">
         <accelerator>
            <KeyCodeCombination alt="UP" code="LEFT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
    </Menu>

</MenuBar>
