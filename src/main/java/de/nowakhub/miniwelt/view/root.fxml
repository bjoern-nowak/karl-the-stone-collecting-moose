<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.BorderPane?>

<Tab fx:id="tab" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane styleClass="root" stylesheets="@root.css">
        <top>
            <fx:include fx:id="action" source="action.fxml"/>
        </top>

        <center>
            <SplitPane dividerPositions="0.5">
                <fx:include fx:id="program" source="program.fxml"/>
                <fx:include fx:id="world" source="world.fxml"/>
            </SplitPane>
        </center>

        <bottom>
            <Label fx:id="status" styleClass="status-text"/>
        </bottom>
    </BorderPane>
</Tab>
