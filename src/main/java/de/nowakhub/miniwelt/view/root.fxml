<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<Tab fx:id="tab" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane styleClass="root" stylesheets="@root.css">
        <top>
            <fx:include fx:id="menubar" source="menubar.fxml" />
        </top>

        <center>
            <BorderPane xmlns:fx="http://javafx.com/fxml">
                <top>
                    <fx:include fx:id="toolbar" source="toolbar.fxml" />
                </top>

                <center>
                    <SplitPane dividerPositions="0.5">
                        <fx:include fx:id="program" source="program.fxml" />
                        <fx:include fx:id="world" source="world.fxml" />
                    </SplitPane>
                </center>

                <bottom>
                    <HBox styleClass="status-bar" BorderPane.alignment="CENTER">
                        <Label fx:id="status" styleClass="status-text" />
                    </HBox>
                </bottom>
            </BorderPane>
        </center>

    </BorderPane>
</Tab>
