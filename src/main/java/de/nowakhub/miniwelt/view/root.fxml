<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.nowakhub.miniwelt.controller.RootController"
            stylesheets="@root.css"
            styleClass="root">
    <top>
        <fx:include source="Menubar.fxml" />
    </top>

    <center>
        <BorderPane xmlns:fx="http://javafx.com/fxml">
            <top>
                <fx:include source="Toolbar.fxml" />
            </top>

             <center>
                <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
                  <items>
                      <fx:include source="Editor.fxml" />
                      <fx:include source="World.fxml" />
                  </items>
                </SplitPane>
             </center>

             <bottom>
                 <HBox styleClass="statusbar" BorderPane.alignment="CENTER">
                     <children>
                         <Label alignment="CENTER" styleClass="label-status" text="Status:" />
                         <Label fx:id="status" styleClass="status-text" />
                     </children>
                 </HBox>
             </bottom>
        </BorderPane>
    </center>

</BorderPane>
