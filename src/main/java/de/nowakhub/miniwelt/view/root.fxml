<BorderPane fx:id="root" styleClass="root" stylesheets="@root.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.nowakhub.miniwelt.controller.RootController">
    <top>
        <fx:include fx:id="action" source="action.fxml"/>
    </top>

    <center>
        <fx:include fx:id="tabs" source="tabs.fxml"/>
    </center>

    <bottom>
        <Label fx:id="status" styleClass="status-text"/>
    </bottom>
</BorderPane>
