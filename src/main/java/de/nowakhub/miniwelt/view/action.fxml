<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.nowakhub.miniwelt.controller.ActionController" stylesheets="@action.css">
   <MenuBar fx:id="menubar" styleClass="menubar" >
       <fx:define>
           <ToggleGroup fx:id="mouseModeToggleGroupMenubar" />
       </fx:define>

       <Menu text="_Program">
           <MenuItem mnemonicParsing="false" onAction="#onProgramNew" text="New">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onProgramOpen" text="Open">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <SeparatorMenuItem mnemonicParsing="false" />
           <MenuItem mnemonicParsing="false" onAction="#onProgramSave" text="Save">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onProgramSaveUnder" text="Save under">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onProgramCompile" text="Compile">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="K" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onProgramPrint" text="Print">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <SeparatorMenuItem mnemonicParsing="false" />
           <MenuItem mnemonicParsing="false" onAction="#onProgramExit" text="Exit">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
       </Menu>

       <Menu text="_World">
           <MenuItem onAction="#onWorldReset" text="_Reset">
           </MenuItem>
           <MenuItem onAction="#onWorldLoad" text="_Load">
           </MenuItem>
           <MenuItem onAction="#onWorldSave" text="S_ave">
           </MenuItem>
           <Menu text="E_xport world as...">
               <items>
                   <MenuItem mnemonicParsing="false" onAction="#onWorldExportPNG" text="PNG" />
                   <MenuItem mnemonicParsing="false" onAction="#onWorldExportXML" text="XML" />
                   <MenuItem mnemonicParsing="false" onAction="#onWorldExportText" text="Text" />
               </items>
           </Menu>
           <SeparatorMenuItem mnemonicParsing="false" />
           <MenuItem onAction="#onWorldChangeSize" text="_Change world size">
           </MenuItem>
           <Menu text="Set _mouse mode to...">
               <RadioMenuItem onAction="#onMouseModePlaceObstacle" text="Place Wall" toggleGroup="$mouseModeToggleGroupMenubar" />
               <RadioMenuItem onAction="#onMouseModePlaceItem" text="Place Danger" toggleGroup="$mouseModeToggleGroupMenubar" />
               <RadioMenuItem onAction="#onMouseModePlaceActor" text="Place _Karl" toggleGroup="$mouseModeToggleGroupMenubar" />
               <RadioMenuItem onAction="#onMouseModePlaceStart" text="Place Startpoint" toggleGroup="$mouseModeToggleGroupMenubar" />
               <RadioMenuItem onAction="#onMouseModePlaceFree" text="Remove" toggleGroup="$mouseModeToggleGroupMenubar" />
           </Menu>
       </Menu>

       <Menu text="_Actor">
           <MenuItem mnemonicParsing="false" onAction="#onActorBagChangeSize" text="Change bag max. size"><accelerator>
               <KeyCodeCombination alt="UP" code="F1" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorBagChangeContent" text="Change bag content"><accelerator>
               <KeyCodeCombination alt="UP" code="F2" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <SeparatorMenuItem mnemonicParsing="false" />
           <MenuItem mnemonicParsing="false" onAction="#onActorStepAhead" text="[move] stepAhead()"><accelerator>
               <KeyCodeCombination alt="UP" code="F3" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorTurnRight" text="[move] turnRight()"><accelerator>
               <KeyCodeCombination alt="UP" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorBackToStart" text="[move] backToStart()"><accelerator>
               <KeyCodeCombination alt="UP" code="F5" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorAheadClear" text="[test] aheadClear()"><accelerator>
               <KeyCodeCombination alt="UP" code="F6" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorBagEmpty" text="[test] bagEmpty()"><accelerator>
               <KeyCodeCombination alt="UP" code="F7" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorFoundItem" text="[test] foundDanger()"><accelerator>
               <KeyCodeCombination alt="UP" code="F8" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorPickUp" text="[act ] pickUp()"><accelerator>
               <KeyCodeCombination alt="UP" code="F9" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onActorDropDown" text="[act ] dropDown()"><accelerator>
               <KeyCodeCombination alt="UP" code="F10" control="UP" meta="UP" shift="UP" shortcut="UP" />
           </accelerator></MenuItem>
       </Menu>

       <Menu text="_Simulation">
           <MenuItem mnemonicParsing="false" onAction="#onSimStartOrContinue" text="Start / Continue">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="RIGHT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onSimPause" text="Pause">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="DOWN" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
           <MenuItem mnemonicParsing="false" onAction="#onSimStop" text="Stop">
               <accelerator>
                   <KeyCodeCombination alt="UP" code="LEFT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
       </Menu>

   </MenuBar>



  <ToolBar styleClass="toolbar">
      <fx:define>
          <ToggleGroup fx:id="mouseModeToggleGroupToolbar" />
      </fx:define>

      <Button mnemonicParsing="false" onAction="#onProgramNew" prefHeight="40.0" prefWidth="40.0" text="Neu">
          <styleClass>
              <String fx:value="btn-new" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Add a new Editor Tab" />
        </tooltip>
      </Button>
      <Button mnemonicParsing="false" onAction="#onProgramOpen" text="Open">
          <styleClass>
              <String fx:value="btn-open" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Opens an .java File" />
        </tooltip>
      </Button>
      <Button mnemonicParsing="false" onAction="#onProgramSave" text="Save">
          <styleClass>
              <String fx:value="btn-save" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Save the editor as .java file" />
        </tooltip>
      </Button>
      <Button mnemonicParsing="false" onAction="#onProgramCompile" text="Com">
          <styleClass>
              <String fx:value="btn-compile" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Saves and compiles the editor" />
        </tooltip>
      </Button>

      <Separator orientation="VERTICAL" prefHeight="25.0" />

      <ToggleButton mnemonicParsing="false" onAction="#onMouseModePlaceObstacle" text="Wall" toggleGroup="$mouseModeToggleGroupToolbar">
          <styleClass>
              <String fx:value="btn-obstacle" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Set left click to place a wall" />
        </tooltip>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#onMouseModePlaceItem" text="Danger" toggleGroup="$mouseModeToggleGroupToolbar">
          <styleClass>
              <String fx:value="btn-item" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Set left click to place a danger" />
        </tooltip>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#onMouseModePlaceActor" text="Karl" toggleGroup="$mouseModeToggleGroupToolbar">
          <styleClass>
              <String fx:value="btn-actor" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Set left click to place karl" />
        </tooltip>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#onMouseModePlaceStart" text="Startpoint" toggleGroup="$mouseModeToggleGroupToolbar">
          <styleClass>
              <String fx:value="btn-start" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Set left click to place a startpoint" />
        </tooltip>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#onMouseModePlaceFree" text="Remove" toggleGroup="$mouseModeToggleGroupToolbar">
          <styleClass>
              <String fx:value="btn-remove" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Set left click to clear a field" />
        </tooltip>
      </ToggleButton>

      <Separator orientation="VERTICAL" prefHeight="25.0" styleClass="separator" />

      <Button mnemonicParsing="false" onAction="#onActorBagChangeContent" text="BagContent">
          <styleClass>
              <String fx:value="btn-pocket" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Opens dialog to change bag content" />
        </tooltip>
      </Button>

      <Separator orientation="VERTICAL" prefHeight="25.0" styleClass="separator" />

      <Button mnemonicParsing="false" onAction="#onSimStartOrContinue" text="Start">
          <styleClass>
              <String fx:value="btn-run" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Run your editor program or continues after pause" />
        </tooltip>
      </Button>
      <Button mnemonicParsing="false" onAction="#onSimPause" text="Pause">
          <styleClass>
              <String fx:value="btn-pause" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Pause the simulation" />
        </tooltip>
      </Button>
      <Button mnemonicParsing="false" onAction="#onSimStop" text="Stop">
          <styleClass>
              <String fx:value="btn-stop" />
              <String fx:value="btn" />
          </styleClass>
          <tooltip>
           <Tooltip text="Stops the simulation (reset fields prior start)" />
        </tooltip>
      </Button>
     <VBox>
         <Label styleClass="sliderSimSpeedLabel" text="Simulation-Speed" />
         <Slider fx:id="sliderSimSpeed" majorTickUnit="50.0" minorTickCount="4" showTickMarks="true" snapToTicks="true" value="50.0">
             <tooltip>
              <Tooltip text="Adjust speed of simulation" />
           </tooltip>
         </Slider>
     </VBox>
  </ToolBar>
</VBox>
